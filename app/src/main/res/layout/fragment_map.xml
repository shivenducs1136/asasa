<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MapFragment">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_coulms">

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:queryHint="Enter City Name"
                    android:id="@+id/searchboxtxt"
                    android:layout_marginLeft="10dp"
                    android:elevation="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    />


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/search_coulms"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/search_results_recview"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/search_coulms"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/restraunt_search_recview"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_baseline_location_on_24"
                android:alpha="0.25"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/i1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/i1"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/cantora_one"
                android:textSize="20sp"
                android:alpha="0.25"
                android:textColor="@color/black"
                android:text="Search By City Name" />
        </RelativeLayout>

    </FrameLayout>
</layout>
